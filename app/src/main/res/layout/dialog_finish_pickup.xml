<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="210dp"
        android:layout_centerInParent="true"
        android:paddingTop="20dp"
        android:background="@drawable/black_border_box">

        <ImageView
            android:id="@+id/iv_icon_notify"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_info" />

        <TextView
            android:id="@+id/tv_note_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:layout_below="@+id/iv_icon_notify"
            android:text="@string/note_finish"
            android:textSize="@dimen/size_text_error" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_ok"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yellow_solid_box"
                    android:text="@string/ok"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:textColor="@color/white_dark" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_cancel"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yellow_solid_box"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:textColor="@color/white_dark" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>