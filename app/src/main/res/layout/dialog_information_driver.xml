<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/linear_info"
        android:layout_width="240dp"
        android:layout_height="220dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/black_border_box">

        <TextView
            android:id="@+id/txt_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/driver_name"
            android:textSize="13sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/info_star_1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/txt_info_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/icon_star" />

        <ImageView
            android:id="@+id/info_star_2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/txt_info_name"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/info_star_1"
            android:background="@drawable/icon_star" />

        <ImageView
            android:id="@+id/info_star_3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/txt_info_name"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/info_star_2"
            android:background="@drawable/icon_star" />

        <ImageView
            android:id="@+id/info_star_4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/txt_info_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/info_star_1"
            android:background="@drawable/icon_star" />

        <ImageView
            android:id="@+id/info_star_5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/txt_info_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/info_star_4"
            android:background="@drawable/icon_star" />

        <TextView
            android:id="@+id/tv_distan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_star_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/info_star_4"
            android:text="@string/distance" />

        <TextView
            android:id="@+id/txt_distan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_star_1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/tv_distan"
            android:text="" />

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/txt_distan"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/black_light" />

        <TextView
            android:id="@+id/txt_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="@string/plate_number" />

        <TextView
            android:id="@+id/text_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_1"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_plate"
            android:text="" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_plate"
            android:layout_marginLeft="5dp"
            android:text="@string/brand_info" />

        <TextView
            android:id="@+id/txt_brand_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_plate"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/textView2"
            android:text="" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_plate"
            android:layout_marginLeft="120dp"
            android:text="@string/model_info" />

        <TextView
            android:id="@+id/txt_model_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_plate"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/textView4"
            android:text="" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="5dp"
            android:text="@string/company" />

        <TextView
            android:id="@+id/txt_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/textView5"
            android:text="" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="120dp"
            android:text="@string/seat" />

        <TextView
            android:id="@+id/txt_num_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/textView6"
            android:text="" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginLeft="5dp"
            android:text="@string/transportation_type" />

        <TextView
            android:id="@+id/txt_type_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/textView7"
            android:text="" />

        <Button
            android:id="@+id/btn_book_ride"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/textView7"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/yellow_solid_box"
            android:text="@string/book_ur_ride"
            android:textAllCaps="false"
            android:textColor="@color/white_dark" />

    </RelativeLayout>

    <com.example.prosoft.taxiloy.ui.view.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_logo" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="-18dp"
        android:id="@+id/img_arrdown"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linear_info"
        android:background="@drawable/icon_arrow_down_white"/>
</RelativeLayout>
